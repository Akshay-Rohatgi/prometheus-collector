{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "name": "k8s_resource_windows_rules_group_3",
            "type": "Microsoft.AlertsManagement/prometheusRuleGroups",
            "apiVersion": "2021-07-22-preview",
            "location": "$location",
            "properties": {
                "scopes": [
                    "$mac"
                ],
                "rules": [
                    {
                        "record": "network_io_1",
                        "expression": "sort_desc(sum by (cluster, namespace, pod, container) (rate(windows_container_network_received_bytes_total{job = \"windows-exporter\", cluster = \"$cluster\"}[2m])))"
                    },
                    {
                        "record": "network_io_2",
                        "expression": "sort_desc(sum by (cluster, namespace, pod, container) (rate(windows_container_network_transmitted_bytes_total{job = \"windows-exporter\", cluster = \"$cluster\"}[2m])))"
                    }
                ]
            }
        }
    ]
}