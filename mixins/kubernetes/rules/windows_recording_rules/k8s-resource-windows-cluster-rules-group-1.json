{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {},
    "variables": {},
    "resources": [
        {
            "name": "k8s_resource_windows_rules_group_1",
            "type": "Microsoft.AlertsManagement/prometheusRuleGroups",
            "apiVersion": "2021-07-22-preview",
            "location": "eastus2euap",
            "properties": {
                "scopes": [
                    "/subscriptions/ad2f1a83-caac-4e21-9d2a-9ca3f87105e2/resourcegroups/divyaj-test/providers/microsoft.monitor/accounts/containerinsightsprodclusteraccounteus2euap"
                ],
                "rules": [
                    {
                        "record": ":windows_node_cpu_utilisation:avg1m",
                        "expression": "1 - avg(rate(windows_cpu_time_total{job = \"windows-exporter\", mode = \"idle\", cluster = \"ci-prod-aks-msi-eus2\"}[1m]))"
                    },
                    {
                        "record": "windows_pod_container_available",
                        "expression": "windows_container_available{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\"} * on(container_id) group_left(container, pod, namespace, cluster) max(kube_pod_container_info{job = \"kube-state-metrics\", cluster = \"ci-prod-aks-msi-eus2\"}) by(container, container_id, pod, namespace, cluster)"
                    },
                    {
                        "record": "kube_pod_windows_container_resource_cpu_cores_request",
                        "expression": "max by (namespace, pod, container, cluster) (kube_pod_container_resource_requests{resource = \"cpu\", job = \"kube-state-metrics\", cluster = \"ci-prod-aks-msi-eus2\"}) * on(container, pod, namespace, cluster) (windows_pod_container_available{cluster = \"ci-prod-aks-msi-eus2\"})"
                    },
                    {
                        "record": "node:windows_node_num_cpu:sum",
                        "expression": "count by (instance, cluster) (sum by (instance, core, cluster) (windows_cpu_time_total{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\"}))"
                    },
                    {
                        "record": "cpu_requests_commitment",
                        "expression": "sum(kube_pod_windows_container_resource_cpu_cores_request{cluster = \"ci-prod-aks-msi-eus2\"}) / sum(node:windows_node_num_cpu:sum{cluster = \"ci-prod-aks-msi-eus2\"})"
                    },
                    {
                        "record": "kube_pod_windows_container_resource_cpu_cores_limit",
                        "expression": "kube_pod_container_resource_limits{resource = \"cpu\", job = \"kube-state-metrics\", cluster = \"ci-prod-aks-msi-eus2\"} * on (container, pod, namespace, cluster) (windows_pod_container_available{cluster = \"ci-prod-aks-msi-eus2\"})"
                    },
                    {
                        "record": ":windows_node_memory_MemFreeCached_bytes:sum",
                        "expression": "sum(windows_memory_available_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" } + windows_memory_cache_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" })"
                    },
                    {
                        "record": ":windows_node_memory_MemTotal_bytes:sum",
                        "expression": "sum(windows_os_visible_memory_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" })"
                    },
                    {
                        "record": "memory_utilization",
                        "expression": "1 - sum(sum(windows_memory_available_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" } + windows_memory_cache_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" })) / sum(sum(windows_os_visible_memory_bytes{job = \"windows-exporter\", cluster = \"ci-prod-aks-msi-eus2\" }))"
                    }
                ]
            }
        }
    ]
}
